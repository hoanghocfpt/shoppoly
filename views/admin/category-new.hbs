                <div class="w-full overflow-x-auto">
                    <form class="flex flex-col gap-5">
                        <div>
                            <label for="username" class="block text-sm text-gray-500 font-semibold">Tên danh mục</label>
                            <input id="name" type="text" placeholder="Tên danh mục" class="block  mt-2 w-full placeholder-gray-400/70  rounded-lg border border-gray-200 bg-white px-5 py-2.5 text-gray-700 focus:border-gray-400 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-40" />
                        </div>
                        <div>
                            <label for="image" class=" font-semibold text-sm text-gray-500">Ảnh bìa</label>
                            <input id="thumbnail" name="file" type="file" accept=".jpg, .jpeg, .png" class="block w-full px-3 py-2 mt-2 text-sm text-gray-600 bg-white border border-gray-200 rounded-lg file:bg-gray-200 file:text-gray-700 file:text-sm file:px-4 file:py-1 file:border-none file:rounded-full placeholder-gray-400/70  focus:border-gray-400 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-40" />
                        </div>
                        <div id="thumbnail-preview">
                        </div>
                        <div>
                            <label for="countries" class="outline-none block mb-2 text-sm font-medium text-gray-500 white:text-white">Trạng thái</label>
                            <select id="status" class="outline-none bg-gray-50 border border-gray-200 text-gray-600 text-sm font-semibold rounded-lg focus:border-gray-400 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-40 block w-full p-2.5">
